---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import GiftsFooter from "@components/GiftsFooter.astro";
import { SITE } from "@consts";

type Props = {
  title: string;
  description: string;
};

const path = Astro.url.pathname;
const isGiftsPage = path === "/gifts";
const { title, description } = Astro.props;

const isProd = import.meta.env.PROD;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={`${title} | ${SITE.NAME}`} description={description} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    {isGiftsPage ? <GiftsFooter /> : <Footer />}

    {
      isProd && (
        <script
          defer
          src="https://analytics.rjhoppe.dev/script.js"
          data-website-id="823d9689-22dc-4540-85cc-d6f852c9a16f"
        ></script>
      )
    }
  </body>
</html>
