---
enum DetailType {
  title = "title",
  subtitle = "subtitle",
  description = "description",
  location = "location",
}

const details: {
  type: DetailType;
  content: string;
}[] = [
  {
    type: DetailType.title,
    content: `Hi, I'm Rick`,
  },
  {
    type: DetailType.subtitle,
    content: "Software Engineer 💻",
  },
  {
    type: DetailType.description,
    content:
      "Homelab enthusiast 🤖 | Amateur mixologist 🍹 | Cursed sports fan 🫠",
  },
  {
    type: DetailType.location,
    content: "Washington D.C. 🏛️",
  },
];

const getClass = (type: DetailType) => {
  switch (type) {
    case DetailType.title:
      return "text-4xl font-semibold tracking-wide md:text-5xl animate-fade-up duration-300 text-black dark:text-white text-center";
    case DetailType.subtitle:
      return "text-sm font-normal tracking-wide md:text-base duration-300 text-center";
    case DetailType.description:
      return "text-sm font-normal tracking-wide md:text-base animate-fade-in duration-300 text-center";
    case DetailType.location:
      return "text-sm font-normal tracking-wide md:text-base animate-fade-in duration-300 text-center";
  }
};
---

<div class="grid grid-cols-1 place-content-center place-items-center gap-5">
  {
    details.map((detail) => (
      <p class={getClass(detail.type)}>{detail.content}</p>
    ))
  }
</div>
